apiVersion: apps/v1
kind: Deployment
metadata:
  name: cashier-counter
  labels:
    app: cashier-counter
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cashier-counter
  template:
    metadata:
      labels:
        app: cashier-counter
    spec:
      containers:
        - name: cashier-counter
          image: zedmanny/cashier-counter:llm-1
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: cashier-counter-service
spec:
  selector:
    app: cashier-counter
  type: NodePort
  ports:
    - name: http
      port: 80
      targetPort: 8080
      nodePort: 30080

