apiVersion: apps/v1
kind: Deployment
metadata:
  name: cashier-counter
  labels:
    app: cashier-counter
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cashier-counter
  template:
    metadata:
      labels:
        app: cashier-counter
    spec:
      containers:
        - name: cashier-counter
          image: zedmanny/cashier-counter:llm-2
          ports:
            - containerPort: 8080
          # Optional probes (safe defaults)
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: cashier-counter-service
  labels:
    app: cashier-counter
spec:
  type: NodePort
  selector:
    app: cashier-counter
  ports:
    - name: http
      protocol: TCP
      port: 8080         # Cluster service port
      targetPort: 8080   # Container port
      nodePort: 8080     # Host port on each node
